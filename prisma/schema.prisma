generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int            @id @default(autoincrement())
  completed_days CompletedDay[]
  habits         Habit[]

  @@map("users")
}

model Habit {
  id          Int          @id @default(autoincrement())
  name        String
  selected    Boolean
  order       Int
  user        User         @relation(fields: [user_id], references: [id])
  user_id     Int
  occurrences Occurrence[]

  @@unique([order, user_id])
  @@map("habits")
}

model Occurrence {
  id       Int      @id @default(autoincrement())
  date     DateTime @db.Date
  habit    Habit    @relation(fields: [habit_id], references: [id])
  habit_id Int

  @@index([habit_id])
  @@unique([date, habit_id])
  @@map("occurrences")
}

model CompletedDay {
  id      Int      @id @default(autoincrement())
  date    DateTime @db.Date
  user    User     @relation(fields: [user_id], references: [id])
  user_id Int

  @@index([user_id])
  @@unique([date, user_id])
  @@map("completed_days")
}
