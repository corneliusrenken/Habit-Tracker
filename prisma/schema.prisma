generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int     @id @default(autoincrement())
  habits Habit[]

  @@map("users")
}

model Habit {
  id          Int          @id @default(autoincrement())
  name        String
  selected    Boolean      @default(true)
  order       Int
  user_id     Int
  user        User         @relation(fields: [user_id], references: [id])
  occurrences Occurrence[]

  @@unique([name, user_id])
  @@unique([user_id, order], map: "unique_order_per_user_id")
  @@index([user_id])
  @@map("habits")
}

model Occurrence {
  id        Int      @id @default(autoincrement())
  date      DateTime @db.Date
  habit_id  Int
  completed Boolean
  habit     Habit    @relation(fields: [habit_id], references: [id], onDelete: Cascade)

  @@unique([date, habit_id])
  @@index([habit_id])
  @@map("occurrences")
}
